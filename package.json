{
  "name": "bank-backend",
  "version": "1.0.0",
  "description": "A client-server bank backend application for students to experiment with Cursor",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd src/server && npm run dev",
    "client:dev": "cd src/client && npm run dev",
    "server:install": "cd src/server && npm install",
    "client:install": "cd src/client && npm install",
    "install:all": "npm install && npm run server:install && npm run client:install",
    "build": "npm run client:build && npm run server:build",
    "client:build": "cd src/client && npm run build",
    "server:build": "cd src/server && npm run build"
  },
  "keywords": ["bank", "backend", "express", "vite", "material-ui", "cursor"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 